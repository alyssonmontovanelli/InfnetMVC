@using InfnetMVC.ViewModels

@model RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <form method="post" class="needs-validation" novalidate>
                <h2 class="card-title text-center mb-4">Crie sua conta</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert">Por favor, corrija os erros abaixo e tente novamente.</div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" type="email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " required />
                    <label asp-for="Email">Endereço de E-mail</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" " required />
                    <label asp-for="Password">Crie uma Senha</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" " required />
                    <label asp-for="ConfirmPassword">Confirme sua Senha</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar-se</button>
            </form>
        </section>
    </div>
</div>
